};

conky.text = [[

  ${voffset -25}${offset 180}${font neuropol:size=20}${time %H:%M}${font}  ${font Nimbus Mono L:size=9}$uptime
  ${voffset 14}${offset 178}${color #FF8000}${font Roboto-Italic:size=12}${exec date +%B\ %Y | sed 's/^.\| [a-z]/\U&/g'}
  ##Replace 'wlan0' with name of your network interface
  ${offset 122}${voffset 100}${color #FFFFFF}${font Roboto-Medium:size=17}Dw  ${color #FF8000}${downspeed wlan0}
  ##Replace 'wlan0' with name of your network interface
  ${offset 118}${voffset 20}${color #FFFFFF}Up ${offset 10}${color #FF8000}${upspeed wlan0}
  ##Replace 'wlan0' with name of your network interface
  #${offset 120}${voffset 5}${font Roboto-Regularsize=12}${color #FFFFFF}TDown   ${color #FF8000}${totaldown wlan0}
  #${offset 90}${voffset 30}${font Roboto-Regularsize=12}${color #FFFFFF}Song:${offset 21}${color #af1616}${scroll 17 ${execi 2 ~/.conky/minimalism/cmus-conky}}
  ${offset 35}${voffset 142}${font Roboto-Regular:size=15}${color #FFFFFF}CPU
  ${offset 188}${voffset 35}${font Roboto-Regular:size=8}Core 0
  ${offset 234}${voffset -13}Core 1
  ${offset 274}${voffset -13}Core 2
  ${offset 314}${voffset -13}Core 3

  ${offset 90}${voffset 20}${font Roboto-Regular:size=11}${fs_used /} / ${fs_size /}
  ${offset 80}${voffset 5} $mem / $memmax
  ${offset 165}${voffset 5}${color #FF8000}[$memperc%]
  ${offset 205}${voffset 10}${color #ffffff}${font Roboto-Bold:size=14}MEM
